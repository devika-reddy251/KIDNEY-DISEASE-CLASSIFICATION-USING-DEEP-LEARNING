import numpy as np
from tensorflow.keras.models import load_model
import matplotlib.pyplot as plt
from PIL import Image
import os

# Settings
IMG_HEIGHT = 128
IMG_WIDTH = 128
classes = ['Cyst', 'Normal', 'Stone', 'Tumor']
DATA_DIR = 'CT-KIDNEY-DATASET-Normal-Cyst-Tumor'

# Load model
model = load_model('models/saved_model.h5')

# Function for a single image pred
def predict_image(img_path):
    img = Image.open(img_path).convert('RGB')
    img = img.resize((IMG_WIDTH, IMG_HEIGHT))
    img_arr = np.array(img, dtype='float32') / 255.0
    img_arr = np.expand_dims(img_arr, axis=0)
    pred_prob = model.predict(img_arr)[0]
    pred_class = classes[np.argmax(pred_prob)]
    return pred_class, pred_prob

# Test on some images
sample_images = []
for cls in classes:
    cls_dir = os.path.join(DATA_DIR, cls)
    sample_images.append(os.path.join(cls_dir, os.listdir(cls_dir)[0]))  # first image in each class

for img_path in sample_images:
    pred, prob = predict_image(img_path)
    print(f"Image: {img_path} -> Predicted: {pred}, Probabilities: {prob}")
