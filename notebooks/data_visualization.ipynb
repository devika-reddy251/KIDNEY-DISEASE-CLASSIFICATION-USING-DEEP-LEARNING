import os
import matplotlib.pyplot as plt
import seaborn as sns
import random
import cv2

DATASET_PATH = "CT-KIDNEY-DATASET-Normal-Cyst-Tumor-Stone/"
# print("Current working directory:",os.getcwd())
# print("Available classes:", os.listdir(DATASET_PATH))

categories = os.listdir(DATASET_PATH)
print("Categories:", categories)

# Count images in each class
count = {cat: len(os.listdir(os.path.join(DATASET_PATH, cat))) for cat in categories}
sns.barplot(x=list(count.keys()), y=list(count.values()))
plt.title("Image count per category")
plt.show()

# Show random samples
for cat in categories:
    path = os.path.join(DATASET_PATH, cat)
    sample = random.choice(os.listdir(path))
    img = cv2.imread(os.path.join(path, sample))
    img = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)
    plt.imshow(img)
    plt.title(cat)
    plt.axis("off")
    plt.show()
